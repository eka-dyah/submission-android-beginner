<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/colorLogo">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/img_item"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/equip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/img_item"
            android:layout_toRightOf="@id/img_item"
            android:textAlignment="center"
            android:textColor="#FFCA28"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded"
            tools:text="Nama" />

        <TextView
            android:id="@+id/equip_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/equip_name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/img_item"
            android:layout_toRightOf="@id/img_item"
            android:textAlignment="center"
            android:textColor="#FFCA28"
            android:textStyle="italic"
            tools:text="Tipe" />


        <TextView
            android:id="@+id/equip_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/equip_type"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/img_item"
            android:layout_toRightOf="@id/img_item"
            android:maxLines="3"
            android:textAlignment="center"
            android:textColor="#FFCA28"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded"
            tools:text="deskripsi" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>